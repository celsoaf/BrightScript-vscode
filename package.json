{
    "name": "brightscript",
    "displayName": "BrightScript",
    "description": "BrightScript Language",
    "version": "0.0.1",
    "publisher": "celsoaf",
    "license": "MIT",
    "author": "CelsoAF",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Formatters",
        "Other"
    ],
    "activationEvents": [
        "onLanguage:brightscript"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "languages": [
            {
                "id": "brightscript",
                "extensions": [
                    ".brs",
                    ".bs"
                ],
                "aliases": [
                    "BrightScript"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "scenegraph",
                "extensions": [
                    ".xml"
                ],
                "aliases": [
                    "SceneGraph"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "brightscript",
                "scopeName": "source.brs",
                "path": "./syntaxes/brightscript.json"
            },
            {
                "language": "scenegraph",
                "scopeName": "text.xml",
                "path": "./syntaxes/scenegraph.json"
            }
        ],
        "snippets": [
            {
                "language": "brightscript",
                "path": "./snippets/BrightScript.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.1.6",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
